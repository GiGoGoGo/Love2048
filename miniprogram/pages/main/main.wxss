  color: #fff;
  border-radius: 5px;
  width: 130px;
  text-align: center;
  height: 40px;
  line-height: 40px;
  font-weight: bold;
  position: absolute;
  bottom: -10px;
  right: 5px;
}
.rsideu {
  background-color: #fff;
  float: left;
  width: 100px;
  height: 70px;
  position: absolute;
  padding-top: 10px;
  box-sizing: border-box;
  border-radius: 5px; 
  opacity: 0.7;
  top: -30px;
  left: 10px;
}
.rsideu text {
  display: block;
  text-align: center;
  font-size: 20px;
  color: #800000;
  font-weight: bold;
}
.rsided {
  background-color: #fff;
  float: left;
  width: 100px;
  height: 70px;
  position: absolute;
  padding-top: 10px;
  box-sizing: border-box;
  border-radius: 5px; 
  opacity: 0.7;
  bottom: -20px;
  left: 10px;
}
.rsided text {
  display: block;
  text-align: center;
  color: #800000;
  font-size: 20px;
  font-weight: bold;
}
.game-start {
  position: absolute;
  z-index: 3;
  background-color: rgba(79, 0, 0, 0.8);
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  text-align: center;
  padding-top: 35vw;
  box-sizing: border-box;
}
.pym {
  color: #fff;
  font-weight: bold;
  font-size: 20px;
}
/* =========================== game ====================  */
.game {
  margin-top: 15vh;
  position: absolute;
  padding-top: 5vw; 
  padding-left: 1vw;
  background: #4f0000;
  border-radius: 6px;
  width: 93vw;
  height: 93vw;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-touch-callout: none;/* 禁用系统默认菜单 */
  -ms-touch-callout: none;
  -webkit-user-select: none;/* css控制文字不能被选中 */
  -moz-user-select: none;
  -ms-user-select: none;/* 当触控事件发生在元素上时，不进行任何操作 */
  -ms-touch-action: none;
  touch-action: none;
}
